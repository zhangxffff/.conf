let g:NERDTreeWinSize=20
let Tlist_WinWidth = 20

function! NERDTlistToggle()
    if winwidth('%') < 100
        return
    endif
    Tlist
    NERDTree
    wincmd p
endfunction

function! NERDTlistClose()
    TlistClose
    NERDTreeClose
endfunction

function! NoValidBuffer()
    if winnr("$") == 2
        let wd1 = bufname(winbufnr(1))
        let wd2 = bufname(winbufnr(2))
        if exists("t:NERDTreeBufName") && wd1 == t:NERDTreeBufName && wd2 == "__Tag_List__"
            exec 'qa'
        endif
        if exists("t:NERDTreeBufName") && wd1 == "__Tag_List__" && wd2 == t:NERDTreeBufName
            exec 'qa'
        endif
    endif
endfunction

function! ResizeWhileChange()
    if winwidth('%') < 100
        call NERDTlistClose()
    endif
    if winwidth('%') >= 100
        call NERDTlistToggle()
    endif
endfunction

"autocmd vimenter * NERDTree
